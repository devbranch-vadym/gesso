{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "airbnb", "prettier"
  ],
  "settings": {
    "import/resolver": "webpack",
    "import/core-modules": [
      "drupal", "drupalSettings", "jquery", "once"
    ]
  },
  "rules": {
    "class-methods-use-this": "off",
    "react/no-danger": "off",
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "import/no-unresolved": "off"
  }
}
