{% extends '@layouts/site-container/site-container.twig' %}
  {% block site_content %}

    {% set header_content %}
      {% include '@components/menu/menu.twig' with {
        'menu_name': 'account',
        'items': [
          { 'title': 'My Account', 'url': '#' },
          { 'title': 'Logout', 'url': '#' }
        ]
      } %}
      {% include '@components/site-name/site-name.twig' %}
    {% endset %}
    {% include '@layouts/header/header.twig' with {
      'has_constrain': true,
      'header_content': header_content
    } %}

    {% set navigation_content %}
      {% include '@components/menu/menu.twig' with {
        'menu_name': 'main',
        'items': [
          { 'title': 'Home', 'url': '#' },
          { 'title': 'About', 'url': '#', 'below': [
            { 'title': 'Submenu item one', 'url': '#' },
            { 'title': 'Submenu item two', 'url': '#', 'below': [
              { 'title': 'Submenu item one', 'url': '#' },
              { 'title': 'Submenu item two', 'url': '#' },
              { 'title': 'Submenu item three', 'url': '#' }
            ]},
            { 'title': 'Submenu item three', 'url': '#' }
          ]},
          { 'title': 'Resources', 'url': '#', 'below': [
            { 'title': 'Submenu item one', 'url': '#' },
            { 'title': 'Submenu item two', 'url': '#' }
          ]},
          { 'title': 'Contact', 'url': '#' }
        ]
      } %}
    {% endset %}
    {% include '@layouts/region/region.twig' with {
      'region_name': 'navigation',
      'has_constrain': true,
      'region_content': navigation_content
    } %}


    {% set breadcrumb_content %}
      {% include '@components/breadcrumb/breadcrumb.twig' with {
        'breadcrumb': [
          { 'url': '#', 'text': 'Home' },
          { 'url': '#', 'text': 'About' },
          { 'text': 'Current Page' }
        ]
      } %}
    {% endset %}
    {% include '@layouts/breadcrumb/breadcrumb.twig' with {
      'has_constrain': false,
      'breadcrumb_content': breadcrumb_content
    } %}

    {% set highlighted_content %}
    {% endset %}
    {% include '@layouts/region/region.twig' with {
      'region_name': 'highlighted',
      'has_constrain': true,
      'region_content': highlighted_content
    } %}

    {% set help_content %}
    {% endset %}
    {% include '@layouts/region/region.twig' with {
      'region_name': 'help',
      'has_constrain': true,
      'region_content': help_content
    } %}

    <main id="main" class="main" role="main" tabindex="-1">
      {% set preface_content %}
      {% endset %}
      {% include '@layouts/region/region.twig' with {
        'region_name': 'preface',
        'has_constrain': true,
        'region_content': preface_content
      } %}

      {% include '@layouts/content/content.twig' with {
        'has_constrain': true,
        'content_content': page_default_content
      } %}

      {% set postscript_content %}
      {% endset %}
      {% include '@layouts/region/region.twig' with {
        'region_name': 'postscript',
        'has_constrain': true,
        'region_content': postscript_content
      } %}
    </main>

    {% set footer_content %}
      {% include '@components/menu/menu.twig' with {
        'menu_name': 'footer',
        'items': [
          { 'title': 'Careers', 'url': '#' },
          { 'title': 'Contact', 'url': '#' },
          { 'title': 'Credits', 'url': '#' },
          { 'title': 'Terms of Use', 'url': '#' }
        ]
      } %}
      {% include '@components/copyright/copyright.twig' %}
    {% endset %}
    {% include '@layouts/footer/footer.twig' with {
      'has_constrain': true,
      'footer_content': footer_content
    } %}

    {% include '@components/back-to-top/back-to-top.twig' with {
      'text': 'Back to top',
      'top_element': 'top'
    }%}
  {% endblock %}

