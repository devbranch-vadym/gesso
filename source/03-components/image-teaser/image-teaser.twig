{% set classes = [
  'image-teaser',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

<article {{ add_attributes({ 'class': classes }) }} role="article">
  <div class="l-media">
    {% if image %}
      <div class="l-media__object">
        <a href="{{ url|default('#0') }}">{{ image }}</a>
      </div>
    {% endif %}

    <div class="l-media__content">
      <h2><a href="{{ url|default('#0') }}">{{ title }}</a></h2>
      {{ date }}
      {{ summary }}
    </div>
  </div>
</article>
