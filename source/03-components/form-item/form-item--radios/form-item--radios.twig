{% set classes = [
  'fieldset',
  'fieldset--radios',
  modifier_classes ? modifier_classes : '',
  is_disabled ? 'is-disabled' : '',
  is_required ? 'is-required' : '',
]|join(' ')|trim %}

{% if not id %}
  {% set id = 'radios'|unique_id %}
{% endif %}

{% if not name %}
  {% set name = id %}
{% endif %}

<fieldset
  {{ add_attributes({ 'class': classes }) }}
  {%- if is_disabled %} disabled="disabled"{% endif %}
  {%- if is_required %} required="required" aria-required="true"{% endif %}
  {%- if description %} aria-describedby="{{ id }}"{% endif -%}
>
  <legend class="fieldset__legend">
    <span class="fieldset__legend-text{% if is_required %} is-required{% endif %}">
      {{- label }}

      {% if is_required %}
        {%- spaceless %}
          <span class="form-item__required-marker">
            <span class="u-visually-hidden">
              {{ 'This field is required.'|t }}
            </span>
          </span>
        {% endspaceless -%}
      {% endif -%}
    </span>
  </legend>
  <div class="fieldset__content">
    <div class="form-item form-item--radios">
      {% include '@components/form-item/form-item--radio/form-item--radio.twig' with {
        'label': 'Option One',
        'name': name,
        'id': '',
      } %}
      {% include '@components/form-item/form-item--radio/form-item--radio.twig' with {
        'label': 'Option Two',
        'name': name,
        'id': '',
      } %}
      {% include '@components/form-item/form-item--radio/form-item--radio.twig' with {
        'label': 'Option Three',
        'name': name,
        'id': '',
      } %}
      {% include '@components/form-item/form-item--radio/form-item--radio.twig' with {
        'label': 'Option Four',
        'name': name,
        'id': '',
      } %}
      {% include '@components/form-item/form-item--radio/form-item--radio.twig' with {
        'label': 'Disabled Option',
        'name': name,
        'id': '',
        'is_disabled': true,
      } %}
    </div>

    {% if description %}
      <div class="fieldset__description" id="{{ id }}">
        {{ description }}
      </div>
    {% endif %}
  </div>
</fieldset>
