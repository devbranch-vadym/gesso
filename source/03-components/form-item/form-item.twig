{% set class_type = type == 'textfield' ? 'text' : type %}

{% set classes = [
  'form-item',
  title_display not in ['after', 'before'] ? 'has-no-label',
  title_display not in ['invisible'] and title_display in ['after'] ? 'has-visible-label-after',
  errors ? 'has-error',
  disabled == 'disabled' ? 'is-disabled',
  required == 'required' ? 'is-required',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

{% set description_classes = [
  'form-item__description',
  description_display == 'invisible' ? 'u-visually-hidden',
] %}

<div {{ add_attributes({class: classes}) }}>
  {% if label_display in ['before', 'invisible'] %}
    {{ label }}
  {% endif %}

  {% if prefix or suffix %}
  <div class="form-item__element">
    {% endif %}

    {% if prefix %}
      <span class="form-item__prefix">{{ prefix }}</span>
    {% endif %}

    {% if description_display == 'before' and description.content %}
      <div{{ description.attributes.addClass(description_classes) }}>
        {{ description.content }}
      </div>
    {% endif %}

    {{ children }}

    {% if suffix %}
      <span class="form-item__suffix">{{ suffix }}</span>
    {% endif %}

    {% if prefix or suffix %}
  </div>
  {% endif %}

  {% if label_display == 'after' %}
    {{ label }}
  {% endif %}

  {% if errors %}
    <div class="form-item__error-message">
      {{ errors }}
    </div>
  {% endif %}

  {% if description_display in ['after', 'invisible'] and description.content %}
    <div{{ description.attributes.addClass(add_description_classes) }}>
      {{ description.content }}
    </div>
  {% endif %}
</div>
