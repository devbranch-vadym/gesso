{% set classes = [
  'view',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

<{{ element ?: 'div' }} {{ add_attributes({ 'class': classes })}}>
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <div class="view__header">
      {{- header -}}
    </div>
  {% endif %}

  {% if exposed %}
    <div class="view__exposed">
      {{- exposed -}}
    </div>
  {% endif %}

  {{ attachment_before }}

  {% if rows %}
    {{- rows -}}
  {% elseif empty %}
    <div class="view__empty">
      {{- empty -}}
    </div>
  {% endif %}

  {{ pager }}
  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <div class="view__footer">
      {{- footer -}}
    </div>
  {% endif %}

  {{ feed_icons }}
</{{ element ?: 'div' }}>
