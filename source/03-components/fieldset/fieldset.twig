{% set classes = [
  'fieldset',
  modifier_classes ? modifier_classes : '',
  is_disabled ? 'is-disabled' : '',
]|join(' ')|trim %}

<fieldset {{ add_attributes({ 'class': classes }) }}>
  <legend class="fieldset__legend">
    <span class="fieldset__legend-text">{{ fieldset_legend }}</span>
  </legend>
  <div class="fieldset__content">
    {{ fieldset_content }}

    {% if fieldset_description %}
      <div class="fieldset__description">
        {{ fieldset_description }}
      </div>
    {% endif %}
  </div>
</fieldset>
