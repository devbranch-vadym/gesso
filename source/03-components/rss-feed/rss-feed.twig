{% set classes = [
  'rss-feed',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

<a href="{{ url|default('#0') }}" {{ add_attributes({ 'class': classes }) }}>
  {%- include '@components/icon/icon.twig' with {
    'modifier_classes': 'icon--rss is-spaced-after',
    'is_hidden': true,
    'icon_name': 'rss',
  } -%}
  {{- link_text -}}
</a>
