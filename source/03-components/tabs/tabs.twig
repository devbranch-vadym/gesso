{% set classes = [
  'tabs',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

{% if tabs %}
  <nav {{ add_attributes({ 'class': classes })}} role="navigation">
    <h2 class="u-visually-hidden">{{ heading|default('Primary tabs'|t) }}</h2>
    <ul class="tabs__items">
    {% for tab in tabs %}
      {% set active_class = tab.active ? ' is-active' : '' %}
      <li class="tabs__item {{- active_class }}">
        {% block link %}
          <a href="{{ tab.url|default('#0') }}" class="tabs__link {{- active_class }}">
            {{ tab.text }}
            {% if tab.active %}
              <span class="u-visually-hidden">{{ active_label|default('(active tab)') }}</span>
            {% endif %}
          </a>
        {% endblock link %}
      </li>
    {% endfor %}
    </ul>
  </nav>
{% endif %}
