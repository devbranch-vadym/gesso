{% set classes = [
  'figure',
  modifier_classes ? modifier_classes : '',
]|join(' ')|trim %}

<figure {{ add_attributes({ 'class': classes }) }}{% if caption is defined %} role="group"{% endif %}>
  {{ title_suffix }}
  <div class="figure__media">{{ media }}</div>
  {% if caption %}
    <figcaption class="figure__caption">{{ caption }}</figcaption>
  {% endif %}
</figure>
