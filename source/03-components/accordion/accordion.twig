{#
  "data-allow-multiple" allows multiple accordion items to be open at once.
  Remove this if you wish to only toggle one at a time.
#}

{% set classes = [
  'accordion',
  modifier_classes ? modifier_classes : ''
] %}

<div {{ add_attributes({ class: classes }) }}>
  {% if accordion_items %}
    <div
      class="accordion__content js-accordion"
      data-allow-multiple
    >
      {{ accordion_items }}
    </div>
  {% endif %}
</div>
