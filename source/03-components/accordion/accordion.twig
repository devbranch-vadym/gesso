{{ attach_library('gesso/accordion') }}

{% set classes = [
  'accordion',
  modifier_classes ? modifier_classes : '',
] %}

<div {{ add_attributes({ class: classes }) }}>
  {% if accordion_items %}
    <div
      class="accordion__content js-accordion"
      {{ allow_multiple ? 'data-allow-multiple' : '' }}
    >
      {{ accordion_items }}
    </div>
  {% endif %}
</div>
