{% set section_id = 'accordion-section'|unique_id %}
{% set button_id = 'accordion-button'|unique_id %}

{% set classes = [
  'c-accordion-item',
  'js-accordion-item',
  modifier_classes ? modifier_classes : '',
] %}

<div {{ add_attributes({ class: classes }) }} {{ accordion_is_open ? 'data-accordion-open="true"' }}>
  <div class="c-accordion-item__panel">
    <{{ accordion_title_element ?: 'h3' }} class="c-accordion-item__heading">
      <button
        class="c-accordion-item__toggle js-accordion-toggle"
        id="{{ button_id }}"
        aria-expanded="false"
        aria-controls="{{ section_id }}"
      >
        {{ accordion_title }}
        <span class="c-accordion-item__icon"></span>
      </button>
    </{{ accordion_title_element ?: 'h3' }}>
    <div
      class="c-accordion-item__drawer expandable__drawer"
      id="{{ section_id }}"
      role="region"
      aria-labelledby="{{ button_id }}"
      aria-expanded="false"
    >
      <div class="c-accordion-item__drawer-inner">
        {{ accordion_content }}
      </div>
    </div>
  </div>
</div>
